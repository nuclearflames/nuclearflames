.mainMenu ul {
  padding-top:10px;
  margin-left:10px;
}

.mainMenu ul li {
  float:left;
  list-style-type:none;
}

.mainMenu ul li a {
  text-decoration:none;
}

.mainMenu ul li a img {
  width:100px;
  height:50px;
  border:none;
}

.mainMenu ul li a span {
  display:none;
}

.mainMenu ul li:hover a span {
  display:inherit;
  font-size:14px;
  text-align:center;
  color:#fff;
}

/* Image size hover */
.mainMenu ul li:hover a img {
  width:120px;
  height:75px;
}

.mainMenu ul li:hover + li a img {
  width:100px;
  height:50px;
}

.mainMenu ul li:hover + li + li a img {
  width:100px;
  height:50px;
}

