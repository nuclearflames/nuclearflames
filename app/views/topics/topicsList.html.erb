<h1>Topic List:</h1>
<table id="form">
<tr>
	<th>
	ID
	</th>
	<th>
	Title
	</th>
	<th>
	Description
	</th>
	<th colspan="4">
	Options
	</th>
</tr>
<% @topics.each do |topic| %>
<tr>
    <td><%= topic.id %></td>
    <td><%= topic.title %></td>
    <td><%= topic.description %></td>
    <td><%= link_to 'Show', topic %></td>
    <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    <td><%= link_to 'Destroy', topic, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>

</table>
<br />
<div id="newPost">
<% if session[:id] %>
<%= render 'form' %>
<% end %>
</div>