<h1>
	About <%= @topic.title %>:
</h1>
<table id="form">
	<tr>
		<th  colspan="2">
			Description:
		</th>
			Description:
		</th>
		<th colspan="2">
			Options:
		</th>
	</tr>
<% @threads.each do |threads| %>
	<tr>
		<td  width="30px">
			<%= threads.id %>
		</td>
		<td>
			<%=h link_to threads.title, thred_path(threads.id) %><br />
			<%=h threads.description %>
		</td>
		<td width="50px">
			<%= link_to 'Owner', user_path(threads.user_id) %>
		</td>
		<% if threads.user_id == current_user.id %>
			<td width="130px">
				<%= link_to 'Edit your thread', edit_thred_path(threads) %><br />
				<%= link_to 'Delete your thread', threads, :confirm => 'Are you sure?', :method => :delete %>
			</td>
		<% end %>
	</tr>
<% end %>
</table>

<div id="newPost">
<% if current_user %>
	<%= render 'threds/form' %>
<% end %>
</div>
<div id="description">
	<p>
		Title:
		<%= @topic.title %>
		Owner ID:
		<%= link_to @topic.user_id, user_path(@topic.user_id) %>
	</p>
</div>