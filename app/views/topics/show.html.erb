
<h1>
About <%= @topic.title %>:
</h1>
<p>
	<b>Thread description:</b>
	<%= @topic.description %>
</p>
<table id="form">
	<tr>
		<th width="50px">
		ID:
		</th>
		<th>
		Description:
		</th>
		<th>
		Options:
		</th>
	</tr>
<% @threads.each do |threads| %>
	<tr>
		<td>
		<%= threads.id %>
		</td>
		<td>
		<%=h link_to threads.title, thred_path(threads.id) %><br />
		<%=h threads.description %>
		</td>
		<td width="100px">
		<%= link_to 'Edit Thread', edit_thred_path(threads) %><br />
		<%= link_to 'Created By', user_path(threads.owner_id) %>
		<%=  %>
		</td>
	</tr>
<% end %>
</table>

<div id="newPost">
<% if session[:id] %>
<%= render 'threds/form' %>
<% end %>
</div>
<div id="description">
<p>
	Title:
	<%= @topic.title %>
	Owner ID:
	<%= link_to @topic.owner_id, user_path(@topic.owner_id) %>
</p>
<p>Edit this topics details: <%= link_to 'Edit', edit_topic_path(@topic) %>
<br />Or go back: <%= link_to 'Back', :action => "topicsList" %>
</div>